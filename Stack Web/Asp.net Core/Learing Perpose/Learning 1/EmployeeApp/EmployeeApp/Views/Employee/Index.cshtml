@model IEnumerable<Employee>

<h1>All Employees</h1>
<a asp-action="Create" class="btn btn-primary">Create New Employee</a>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.EmployeeNumber)</th>
            <th>@Html.DisplayNameFor(model => model.EmployeeName)</th>
            <th>@Html.DisplayNameFor(model => model.DOB)</th>
            <th>@Html.DisplayNameFor(model => model.HiringDate)</th>
            <th>@Html.DisplayNameFor(model => model.GrossSalary)</th>
            <th>@Html.DisplayNameFor(model => model.NetSalary)</th>
            <th>@Html.DisplayNameFor(model => model.DepartmentName)</th>
            <th>Action</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(ModelItem => item.EmployeeNumber)
                </td>

                <td>
                    @Html.DisplayFor(ModelItem => item.EmployeeName)
                </td>

                <td>
                    @Html.DisplayFor(ModelItem => item.DOB)
                </td>

                <td>
                    @Html.DisplayFor(ModelItem => item.HiringDate)
                </td>

                <td>
                    @Html.DisplayFor(ModelItem => item.GrossSalary)
                </td>

                <td>
                    @Html.DisplayFor(ModelItem => item.NetSalary)
                </td>

                <td>
                    @Html.DisplayFor(ModelItem => item.DepartmentName)
                </td>
                <td>
                    @Html.ActionLink("Edit","Edit",new {id = item.EmployeeId})
                    <span>|</span>
                    @Html.ActionLink("Delete","Delete",new {id = item.EmployeeId}, new { onclick ="return confirm('Are you sure you want to delete this employee?');"})
                </td>

            </tr>
        }
        <tr>
        </tr>
    </tbody>

</table>